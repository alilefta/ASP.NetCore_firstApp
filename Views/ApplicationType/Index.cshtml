@{
    ViewData["Title"] = "Application Types";
}
@model IEnumerable<Tutorial.Models.ApplicationType>
    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Application Type List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" asp-controller="ApplicationType" class="btn btn-primary">Create New Application Type</a>
            </div>
        </div>
        <br />
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            @obj.Name
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No Application Type exists!</p>
        }
    </div>